{
  "name": "vscode-oscript",
  "displayName": "OScript for Visual Studio Code",
  "description": "Syntax highlighting for the OScript language in Visual Studio Code.",
  "version": "0.1.1",
  "publisher": "prantlf",
  "author": {
    "name": "Ferdinand Prantl",
    "email": "prantlf@gmail.com",
    "url": "http://prantl.tk"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/vscode-oscript/blob/master/LICENSE"
    }
  ],
  "homepage": "https://github.com/prantlf/vscode-oscript#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/vscode-oscript.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/vscode-oscript/issues"
  },
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "oscript",
        "aliases": [
          "OScript",
          "oscript"
        ],
        "extensions": [
          ".os",
          ".osx"
        ],
        "configuration": "./syntaxes/oscript.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "oscript",
        "scopeName": "source.oscript",
        "path": "./syntaxes/oscript.tmLanguage.json"
      }
    ]
  },
  "keywords": [
    "vscode-extension",
    "vscode-language",
    "oscript",
    "syntax-highlighting"
  ],
  "scripts": {
    "lint:json": "jsonlint -Dq package.json syntaxes/oscript.configuration.json syntaxes/oscript.tmLanguage.json",
    "lint:yaml": "yamllint syntaxes/oscript.configuration.yaml syntaxes/oscript.tmLanguage.yaml",
    "convert": "js-yaml syntaxes/oscript.configuration.yaml > syntaxes/oscript.configuration.json && js-yaml syntaxes/oscript.tmLanguage.yaml > syntaxes/oscript.tmLanguage.json",
    "prepare": "npm run lint:yaml && npm run convert",
    "vscode:prepublish": "npm run lint:json",
    "vsce:patch": "vsce publish --baseImagesUrl https://raw.githubusercontent.com/prantlf/vscode-oscript/master/ patch",
    "vsce:minor": "vsce publish --baseImagesUrl https://raw.githubusercontent.com/prantlf/vscode-oscript/master/ minor"
  },
  "devDependencies": {
    "@prantlf/jsonlint": "10.2.0",
    "js-yaml": "3.13.1",
    "yaml-lint": "1.2.4"
  }
}
