// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/extension.js"]
    },
    {
      "name": "Launch Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/dist/server.js",
      "args": ["--nolazy", "--inspect=6009"],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/server.js"]
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/server.js"]
    },
    {
      "name": "Test Server",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/out/client/test/index",
        "${workspaceRoot}/pkg/client/testFixture"
      ],
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/extension.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Client", "Attach to Server"]
    }
  ]
}
